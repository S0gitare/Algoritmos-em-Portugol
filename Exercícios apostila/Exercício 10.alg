algoritmo "Nome do Programa"

var

    l: Inteiro
    h: Inteiro
    A: Inteiro
    L: Real

inicio

    escreval("Digite a largura da parede em metros:")
    leia(l)

    escreval("Digite a altura da parede em metros:")
    Leia(h)

    A <- ( l * h)

    L <- ( A /2)

    escreval("Área da parede: " , A , "m²")
    escreval("Quantidade de tinta necessária: " , L , "L")

fimalgoritmo